<resources>
    <!-- Base application theme. -->
    <style name="Theme.Draw" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeColorTwo</item>
        <item name="colorPrimaryVariant">@color/themeColorTwo</item>
        <item name="colorOnPrimary">@color/themeColorTwo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppTheme</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/themeColorTwo</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>